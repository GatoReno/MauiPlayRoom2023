<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navtest.Views.Cammera.CameraPage"
             Title="CameraPage">
    <VerticalStackLayout>
        <Image

            Aspect="AspectFit"
            HeightRequest="340"
            Rotation="90"
            Source="{Binding DisplayPhoto.Source}"
            Margin="20,20,20,20" 
            
            />
        <Button
            Text="Open Camera"
            Command="{Binding TakePhotoCommnad}"
            />
    </VerticalStackLayout>
</ContentPage>
