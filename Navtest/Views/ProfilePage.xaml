<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navtest.Views.ProfilePage"
             Title="ProfilePage">
    <VerticalStackLayout>
        <Label
            FontSize="Title"
            Text="Profile Collection here!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            VerticalOptions="EndAndExpand"
            Text="Auth"
                TextColor="{AppThemeBinding Light= White, Dark={StaticResource White}}"
              BackgroundColor="{AppThemeBinding Light={StaticResource Purple}, Dark={StaticResource Secondary}}"
            Clicked="Button_Clicked"
            />
    </VerticalStackLayout>
</ContentPage>
