<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navtest.Views.PickerPage"
             xmlns:views="clr-namespace:Navtest.Renders.PickerViews"
             Title="PickerPage">
    
    <StackLayout>
        <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />



    </VerticalStackLayout>
       <HorizontalStackLayout
            HorizontalOptions="CenterAndExpand"
            >
             <RadioButton
            IsChecked="{Binding Check1}"
            />
        <RadioButton
            IsChecked="{Binding Check2}"
            /><RadioButton
           IsChecked="{Binding Check3}"
            /><RadioButton
            IsChecked="{Binding Check4}"
            />

        </HorizontalStackLayout>
        <StackLayout
            Padding="30"
            >
            <views:Pickerpage1
                IsVisible="{Binding Check1}"
                />
        <views:Pickerpage3
                IsVisible="{Binding Check3}"
                />
        <views:Pickerpage4
                IsVisible="{Binding Check2}"
                />
        <views:Pickerpage2
                IsVisible="{Binding Check4}"
                />

        </StackLayout>
    </StackLayout>
</ContentPage>
