<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Navtest.Renders.CustomePopUp"
               >
    <StackLayout
        x:Name="MainStack"
        Padding="30"
        VerticalOptions="FillAndExpand"
         BackgroundColor="{AppThemeBinding Light= Purple, Dark={StaticResource Secondary}}"
             
        >

         

         <ActivityIndicator 
            VerticalOptions="Center"
             Color="{AppThemeBinding Light={StaticResource White}, Dark= Purple}"
             
             HorizontalOptions="CenterAndExpand"
            IsRunning="True"
            />
        <Label
               TextColor="{AppThemeBinding Light= White, Dark= Purple}"
             
            HorizontalOptions="CenterAndExpand"
            Text="This a XCT Popup"
             />

    </StackLayout>
</xct:Popup>
